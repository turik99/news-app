<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/billCardView"
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation">


            <TextView
                android:padding="5dp"
                android:id="@+id/billName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR 1034 "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageView2" />

            <TextView
                android:padding="5dp"
                android:id="@+id/billDescription"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/billName"
                android:text="stuf stuf and things. making america great again"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_toStartOf="@+id/imageView2" />

            <TextView
                android:id="@+id/votePositionText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Yes"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/billDescription"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/votePositionText"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/divider" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</TableLayout>