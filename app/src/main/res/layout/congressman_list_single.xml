<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:id="@+id/congressListCardView"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:padding="5dp"
                android:id="@+id/congressmanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Senator Android"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:padding="5dp"
                android:id="@+id/congressmanParty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/congressmanName"
                android:text="(D)"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:padding="5dp"

                android:id="@+id/congressmanState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/congressmanParty"
                android:layout_toEndOf="@+id/congressmanParty"
                android:text="California"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>