<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:adjustViewBounds="true"


    android:id="@+id/list_single1">

    <android.support.v7.widget.CardView
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:background="@color/cardview_light_background"
            android:id="@+id/list_single"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:padding="5dp"
                android:id="@+id/newsThumbnail"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:minHeight="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/capitolsteps"
                android:layout_below="@+id/text"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:fontFamily="serif"

                android:padding="3dp"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is an example title that might be used. most tiles are this long, about"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:padding="3dp"
                android:maxWidth="200dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A description tends to be a little bit longer. they can be about this long when un edited, and require some space they can drone on for some time...."
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/newsThumbnail"
                android:layout_toStartOf="@+id/newsThumbnail"/>

            <ImageView
                android:id="@+id/newsSourceImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:padding="4dp"
                app:srcCompat="@drawable/bloomberg_logo" />

            <TextView
                android:id="@+id/newsSourceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/newsSourceImageView"
                android:layout_toEndOf="@+id/newsSourceImageView"
                android:padding="4dp"
                android:text="News Source |"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/biasTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/newsSourceTextView"
                android:layout_alignBottom="@+id/newsSourceTextView"
                android:layout_toEndOf="@+id/newsSourceTextView"
                android:padding="4dp"
                android:text="amount of bias"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</TableLayout>