<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <TextView
                android:padding="5dp"
                android:id="@+id/tweetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is a short. tweet MAKE AMERICA GREAT AGAIN!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/twitter_name"
                android:layout_toEndOf="@+id/twitter_image" />

            <TextView
                android:padding="5dp"
                android:id="@+id/twitter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donald Trump"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/twitter_image">
            </TextView>

            <ImageView
                android:id="@+id/twitter_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/app_icon_alternate_unfinished" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>



</TableLayout>